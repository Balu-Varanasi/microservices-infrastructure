{
  "args": [
    "--zk=zk://zookeeper.service.{{ consul_dns_domain }}:2181/mesos"{% if do_consul_ssl %},
    "--consul",
    "--consul-ssl",
    "--consul-ssl-verify=false"{% endif %}{% if do_consul_auth %},
    "--consul-auth=admin:{{ nginx_admin_password }}"{% endif %},
    "--consul-token={{ consul_acl_master_token }}",
    "--refresh={{ mesos_consul_refresh }}",
    "--log-level=DEBUG"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "{{ mesos_consul_image }}:{{ mesos_consul_image_tag }}"
    }
  },
  "id": "mesos-consul",
  "instances": 1,
  "cpus": 0.1,
  "mem": 128
}

